<h1>Collected Item Archive</h1>

<p>This is a database of vintage and found items.  Add something new!</p>

<table>
  <tr>
    <th>Article</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @items.each do |item| %>
  <tr>
    <td><%= item.article %></td>
    <td><%= item.description %></td>
    <td><%= link_to "Show", item %></td>
    <td><%= link_to "Edit", edit_item_path(item) %></td>
    <td><%= link_to "Remove", item, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
 
